# Пример конфигурации для локальной разработки
# Скопируйте этот файл как .env и заполните актуальными данными

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# Database Configuration (для локальной разработки)
DATABASE_URL=sqlite:///./bot_local.db
# Или для PostgreSQL:
# DATABASE_URL=postgresql://username:password@localhost:5432/bot_business_card

# Admin Configuration
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# Server Configuration
HOST=127.0.0.1
PORT=8001
DEBUG=true

# Security
SECRET_KEY=local-development-secret-key

# File Storage (локальное хранение для разработки)
STORAGE_TYPE=local
UPLOAD_DIR=./uploads

# Logging
LOG_LEVEL=DEBUG
LOG_FILE=./logs/app.log

# Application
ENVIRONMENT=development
BASE_URL=http://localhost:8001